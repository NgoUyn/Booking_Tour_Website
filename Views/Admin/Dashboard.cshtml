@{
	ViewBag.Title = "Admin Dashboard";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<style>
	body.admin-dashboard {
		font-family: 'Poppins', sans-serif;
		background: #f5f6fb;
		min-height: 100vh;
	}
	.admin-shell {
		display: grid;
		grid-template-columns: 260px 1fr;
		min-height: 100vh;
	}
	.sidebar {
		background: #1f2937;
		color: #fff;
		padding: 1.5rem 1rem;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	.sidebar h4 {
		font-weight: 600;
		margin-bottom: 0.5rem;
	}
	.sidebar a {
		color: #d1d5db;
		text-decoration: none;
		display: flex;
		align-items: center;
		gap: 0.75rem;
		padding: 0.6rem 0.75rem;
		border-radius: 0.5rem;
	}
	.sidebar a.active,
	.sidebar a:hover {
		background: rgba(255,255,255,0.08);
		color: #fff;
	}
	.sidebar .section-label {
		font-size: 0.8rem;
		text-transform: uppercase;
		letter-spacing: 0.15rem;
		color: #9ca3af;
		margin-top: 1rem;
	}
	.main-area {
		background: #f5f6fb;
		padding: 1.8rem;
	}
	.dashboard-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(210px, 1fr));
		gap: 1rem;
		margin-bottom: 1.5rem;
	}
	.stat-card {
		background: #fff;
		padding: 1.2rem;
		border-radius: 1rem;
		box-shadow: 0 25px 40px rgba(15, 23, 42, 0.07);
	}
	.stat-card h3 {
		font-size: 1.5rem;
		margin: 0;
	}
	.content-panel {
		background: #fff;
		border-radius: 1.25rem;
		padding: 1.5rem;
		box-shadow: 0 25px 40px rgba(15, 23, 42, 0.07);
	}
	.content-panel h5 {
		margin-bottom: 1rem;
	}
	.datagrid {
		width: 100%;
		border-collapse: collapse;
	}
	.datagrid th,
	.datagrid td {
		padding: 0.9rem 0.75rem;
		text-align: left;
	}
	.datagrid th {
		background: #eef2ff;
		font-size: 0.85rem;
		text-transform: uppercase;
		letter-spacing: 0.1rem;
		color: #4b5563;
	}
	.datagrid tr:nth-child(even) {
		background: #f9fafb;
	}
	.datagrid td.actions button {
		margin-right: 0.4rem;
	}
	.modal-backdrop {
		background: rgba(15, 23, 42, 0.65);
	}
</style>

<body class="admin-dashboard">
	<div class="admin-shell">
		<nav class="sidebar">
			<div>
				<h4>VietWander Admin</h4>
				<p>Quản lý hệ thống</p>
			</div>
			<a href="#"><i class="fa-solid fa-gauge"></i>Dashboard</a>
			<a href="#"><i class="fa-solid fa-users"></i>Users</a>
			<a href="#"><i class="fa-solid fa-plane-departure"></i>Tours</a>
			<a href="#"><i class="fa-solid fa-map"></i>Places</a>
			<a href="#"><i class="fa-solid fa-ticket"></i>Voucher</a>
			<a href="#"><i class="fa-solid fa-receipt"></i>Orders</a>
			<a href="#"><i class="fa-solid fa-headset"></i>Support Ticket</a>
			<div class="section-label">Manager only</div>
			<a href="#"><i class="fa-solid fa-user-gear"></i>Staff Manager</a>
		</nav>
		<section class="main-area">
			<div class="dashboard-grid">
				<div class="stat-card">
					<p class="text-muted mb-1">Tổng số user</p>
					<h3>1,482</h3>
					<small class="text-success"><i class="fa-solid fa-arrow-trend-up"></i> +4.2%</small>
				</div>
				<div class="stat-card">
					<p class="text-muted mb-1">Tổng số tour</p>
					<h3>278</h3>
					<small class="text-success"><i class="fa-solid fa-arrow-trend-up"></i> +2.1%</small>
				</div>
				<div class="stat-card">
					<p class="text-muted mb-1">Tổng order</p>
					<h3>3,910</h3>
					<small class="text-danger"><i class="fa-solid fa-arrow-trend-down"></i> -1.3%</small>
				</div>
				<div class="stat-card">
					<p class="text-muted mb-1">Support chờ</p>
					<h3>12</h3>
					<small class="text-warning"><i class="fa-solid fa-clock"></i> đang chờ xử lý</small>
				</div>
			</div>

			<div class="content-panel">
				<h5>Danh sách khách hàng</h5>
				<div style="overflow-x:auto">
					<table class="datagrid">
						<thead>
							<tr>
								<th>Khách hàng</th>
								<th>Email</th>
								<th>Role</th>
								<th>Member level</th>
								<th>Đã chi</th>
								<th>Trạng thái</th>
								<th>Hành động</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>Nguyễn Văn An</td>
								<td>nguyenvanan@email.com</td>
								<td>User</td>
								<td>Basic</td>
								<td>1,200,000₫</td>
								<td><span class="badge bg-success">Active</span></td>
								<td class="actions">
									<button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#detailModal">Chi tiết</button>
									<button class="btn btn-sm btn-danger">Yêu cầu hủy</button>
								</td>
							</tr>
							<tr>
								<td>Trần Thị Bình</td>
								<td>tranthibinh@email.com</td>
								<td>Admin</td>
								<td>Member</td>
								<td>3,400,000₫</td>
								<td><span class="badge bg-secondary">Inactive</span></td>
								<td class="actions">
									<button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#detailModal">Chi tiết</button>
								</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</section>
	</div>

	<div class="modal fade" id="detailModal" tabindex="-1">
		<div class="modal-dialog modal-dialog-centered modal-lg">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Chi tiết khách hàng</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
				</div>
				<div class="modal-body">
					<form>
						<div class="mb-3">
							<label class="form-label">Tên</label>
							<input type="text" class="form-control" value="Nguyễn Văn An" readonly>
						</div>
						<div class="mb-3">
							<label class="form-label">Email</label>
							<input type="email" class="form-control" value="nguyenvanan@email.com" readonly>
						</div>
						<div class="mb-3">
							<label class="form-label">Lịch sử yêu cầu hỗ trợ</label>
							<textarea class="form-control" rows="3" readonly>Yêu cầu đổi tour vào 02/03</textarea>
						</div>
						<div class="form-check">
							<input class="form-check-input" type="checkbox" value="" id="allowEdit">
							<label class="form-check-label" for="allowEdit">
								Khách đã đồng ý cho staff chỉnh sửa
							</label>
						</div>
					</form>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Đóng</button>
					<button type="button" class="btn btn-primary">Gửi yêu cầu</button>
				</div>
			</div>
		</div>
	</div>
</body>
